			plugins.ChangeContext.init();
		</script>

		<script type="text/javascript">
			jQuery(document).ready(function($) {
				
				$("a.context-popin").click(function() {
					plugins.Popin.loading();
					setTimeout(function(){  plugins.Popin.loadPopin($("#context-popin")); }, 500);
					return false;
				});
				
			});
		</script>
