#set ($layout = "default/www/default/layout/default.vm")
#set ($page_title = $seoPageTitle)

				<section id="product-sku-details">
					<div class="page-header" style="border-bottom: 0px;">
						<div style="float: left; font-size: 18px;"></div>
						<div style="float: right; text-align: right; font-size: 15px;">
							$wording.get("bo.common.date_create_label") $!productSku.dateCreate | $wording.get("bo.common.date_update_label") $!productSku.dateUpdate
						</div>
						<div style="clear: both;"></div>
					</div>

					<div class="widget">						
						<div class="widget-header">
							<div style="float: left;">
								<i class="fa fa-pushpin"></i>
								<h3>$!mainContentTitle</h3>
							</div>
							<div style="float: right; padding-right: 15px; font-size: 15px;">
								<a href="$!urlBack" alt="" class="btn">$wording.get("bo.common.back_label")</a>&nbsp;<a href="$!productSku.editUrl" class="btn btn-primary">$wording.get("bo.common.edit_label")</a>
							</div>
						</div>
						
						<div class="widget-content">
							<div style="width: 100%">
								<strong>$wording.get("bo.product_sku.code_label") :</strong> $!productSku.code
							</div>
							<div style="width: 100%">
								<strong>$wording.get("bo.product_sku.name_label") :</strong> $!productSku.name
							</div>
							<div style="width: 100%">
								<strong>$wording.get("bo.product_sku.description_label") :</strong><br/>
								<blockquote>$!productSku.description</blockquote>
							</div>
							<div style="width: 100%">
								<strong>$wording.get("bo.product_sku.is_default_label") :</strong>
								#if($productSku.active)
								<span style="color: green">$wording.get("common.common.is_default_true")</span>
								#else
								<span style="color: red">$wording.get("common.common.is_default_false")</span>
								#end
							</div>
						</div>
					</div>
					
					<div class="widget widget-nopad">
						<div class="widget-header">
							<i class="fa fa-list-alt"></i>
							<h3>$wording.get("bo.product_sku.global_attribute_list_label")</h3>
						</div>
						<div class="widget-content">
							<table class="table table-bordered table-striped">
								<thead>
									<tr>
										<th style="width: 50%;">Key</th>
										<th style="width: 50%;">Value</th>
									</tr>
								</thead>
								<tbody>
									#set ($mapGlobalAttributes = $!productSku.globalAttributes )
									#foreach($availableAttributeDefinition in $availableGlobaleAttributeDefinitions)
									<tr>
										<td class="description">$availableAttributeDefinition.code</td>
										<td class="value">$!mapGlobalAttributes.get($availableAttributeDefinition.code)</td>
									</tr>
									#end
								</tbody>
							</table>
						</div>
					</div>
					
					<div class="widget widget-nopad">
						<div class="widget-header">
							<i class="fa fa-list-alt"></i>
							<h3>$wording.get("bo.product_sku.area_attribute_list_label")</h3>
						</div>
						<div class="widget-content">
							<table class="table table-bordered table-striped">
								<thead>
									<tr>
										<th style="width: 50%;">Key</th>
										<th style="width: 50%;">Value</th>
									</tr>
								</thead>
								<tbody>
									#set ($mapMarketAreaAttributes = $!productSku.marketAreaAttributes )
									#foreach($availableAttributeDefinition in $availableMarketAreaAttributeDefinitions)
									<tr>
										<td class="description">$availableAttributeDefinition.code</td>
										<td class="value">$!mapMarketAreaAttributes.get($availableAttributeDefinition.code)</td>
									</tr>
									#end
								</tbody>
							</table>
						</div>
					</div>
					
					<div class="widget">
						<div class="widget-header">
							<i class="fa fa-list-alt"></i>
							<h3>$wording.get("bo.product_sku.asset_list_label")</h3>
						</div>
						<div class="widget-content">
							<div style="width: 100%">
								<table class="table table-bordered table-striped">
									<thead>
										<tr>
											<th>Name</th>
											<th>Code</th>
											<th>Type</th>
											<th>Description</th>
											<th>Path</th>
											<th>URL</th>
										</tr>
									</thead>
									<tbody>
										#foreach($asset in $productSku.assets) 
										<tr>
											<td class="description">$!asset.name</td>
											<td class="description">$!asset.code</td>
											<td class="description">$!asset.type</td>
											<td class="description">$!asset.description</td>
											<td class="description">$!asset.path</td>
											<td class="value">
												<a href="$!asset.detailsUrl" class="btn">$wording.get("bo.common.details_label")</a> <a href="$!asset.editUrl" class="btn">$wording.get("bo.common.edit_label")</a>
											</td>
										</tr>
										#end
									</tbody>
								</table>
							</div>
						</div>
					</div>

					<div class="widget">
						<div class="widget-header">
							<div style="float: left;">
								<i class="fa fa-list-alt"></i>
								<h3>$wording.get("bo.product_sku.product_marketing_associated_label")</h3>
							</div>
							<div style="float: right; padding-right: 15px; font-size: 15px;">
								<a href="$!productSku.productMarketing.detailsUrl" class="btn">$wording.get("bo.common.details_label")</a> <a href="$!productSku.productMarketing.editUrl" class="btn btn-primary">$wording.get("bo.common.edit_label")</a>
							</div>
						</div>
						<div class="widget-content">
							<div style="width: 100%">
								<strong>$wording.get("bo.product_marketing.name_label") :</strong> $!productSku.productMarketing.name<br/>
								<strong>$wording.get("bo.product_marketing.code_label") :</strong> $!productSku.productMarketing.code<br/>								
							</div>
						</div>
					</div>
				</section>
				

