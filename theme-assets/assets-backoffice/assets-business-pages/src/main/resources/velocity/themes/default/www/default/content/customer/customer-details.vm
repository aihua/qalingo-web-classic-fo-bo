#set ($layout = "default/www/default/layout/default.vm")
#set ($page_title = $seoPageTitle)

				<section id="customer-details">
				
					<div class="page-header" style="border-bottom: 0px;">
						<div style="float: left; font-size: 18px;"></div>
						<div style="float: right; text-align: right; font-size: 15px;">
							${customer.dateCreateLabel} : ${customer.createdDate} | ${customer.dateUpdateLabel} : ${customer.updatedDate}
						</div>
						<div style="clear: both;"></div>
					</div>

					<div class="widget">
						
						<div class="widget-header">
							<div style="float: left;">
								<i class="fa fa-pushpin"></i>
								<h3>${mainContentTitle}</h3>
							</div>
							<div style="float: right; padding-right: 15px; font-size: 15px;">
								$wording.get("bo.common.actions_label"): <a href="${customer.editUrl}">${customer.editLabel}</a>
							</div>
						</div>
						
						<div class="widget-content">
							<div style="width: 100%">
								${customer.id}
							</div>
							
						</div>
							
					</div>
			
					<div class="widget widget-nopad">
							
						<div class="widget-header">
							<i class="fa fa-list-alt"></i>
							<h3>${customer.xxx}</h3>
						</div>
						
						<div class="widget-content">
							<table class="table table-bordered table-striped">
								<thead>
									<tr>
										<th style="width: 50%;">Key</th>
										<th style="width: 50%;">Value</th>
									</tr>
								</thead>
								<tbody>
								</tbody>
							</table>
							
						</div>
					
					</div>

				</section>
				

