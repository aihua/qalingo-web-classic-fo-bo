#set ($layout = "default/www/default/layout/default.vm")
#set ($page_title = $seoPageTitle)

				<section id="tax-details">
				
					<div class="page-header" style="border-bottom: 0px;">
						<div style="float: left; font-size: 18px;"></div>
						<div style="float: right; text-align: right; font-size: 15px;">
							$wording.get("bo.common.date_create_label") ${tax.dateCreate} | $wording.get("bo.common.date_update_label") ${tax.dateUpdate}
						</div>
						<div style="clear: both;"></div>
					</div>

					<div class="widget">
						
						<div class="widget-header">
							<div style="float: left;">
								<i class="fa fa-pushpin"></i>
								<h3>${mainContentTitle}</h3>
							</div>
							<div style="float: right; padding-right: 15px; font-size: 15px;">
								$wording.get("bo.common.actions_label"): <a href="${tax.editUrl}">$wording.get("bo.common.edit_label")</a>
							</div>
						</div>
						
						<div class="widget-content">
							<div style="width: 100%">
								<strong>$wording.get("bo.tax.code_label") :</strong> $!tax.code
							</div>
							<div style="width: 100%">
								<strong>$wording.get("bo.tax.name_label") :</strong> $!tax.name
							</div>
							<div style="width: 100%">
								<strong>$wording.get("bo.tax.description_label") :</strong> $!tax.description
							</div>							
						</div>
							
					</div>

				</section>
				

